<?xml version="1.0" encoding="UTF-8"?>



<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.Group?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.ProgressBar?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" 
      minWidth="-Infinity" prefHeight="150" prefWidth="480" 
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="bfield.scene.UnitController"
       styleClass="card" fx:id="root">
  <left>
    <Group>
        <BorderPane.margin>
            <Insets right="10" top="20"/>
        </BorderPane.margin>
      <Region styleClass="picture-back" fx:id="rPictureBackground"/>
      <Region styleClass="picture-front" fx:id="rPictureIcon"/>
    </Group>
  </left>
  <center>

    <VBox styleClass="cardContent">
    
      <HBox spacing="5">
        <VBox style="-fx-padding: 0 3.1em 0 0">
          <Text styleClass="cardTitle" fx:id="lblName" text="Label"/>
          <Text styleClass="cardSubtitle" fx:id="lblClass" text="MdIrr+"/>
        </VBox>
    
      </HBox>
   
      <GridPane hgap="3" vgap="6" prefHeight="30.0" prefWidth="350">
        
        <Group GridPane.columnIndex="0">
          <Region styleClass="icon-back" style="-fx-background-color: midnightblue"/>
          <Region styleClass="icon-front, icon-shield"/>
        </Group>

        <Label styleClass="label-score" text="0" fx:id="lblDef" GridPane.columnIndex="1"
        GridPane.hgrow="ALWAYS" >
          <tooltip>
            <Tooltip text="Defense bonus"/>
          </tooltip>
        </Label>
        
        <Group GridPane.columnIndex="2">
          <Region styleClass="icon-back" style="-fx-background-color: darkred"/>
          <Region styleClass="icon-front, icon-hilt"/>
        </Group>
        <Label  GridPane.hgrow="ALWAYS" prefWidth="30" styleClass="label-score" text="0" fx:id="lblMelee" GridPane.columnIndex="3">
          <tooltip>
            <Tooltip text="Melee bonus"/>
          </tooltip>
        </Label>
        
        <Group GridPane.rowIndex="0" GridPane.columnIndex="4">
          <Region fx:id="gMissile" styleClass="icon-back"/>
          <Region styleClass="icon-front, icon-missile"/>
        </Group>
        
        <Label  GridPane.hgrow="ALWAYS" prefWidth="25" styleClass="label-score" text="0" fx:id="lblMissile" 
               GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="5">
          <tooltip>
            <Tooltip text="Missile bonus"/>
          </tooltip>
        </Label>
        
        <Group GridPane.rowIndex="0" GridPane.columnIndex="6">
          <Region  fx:id="gCharge" styleClass="icon-back, icon-black"/>
          <Region styleClass="icon-front, icon-charge"/>
        </Group>
        <Label  GridPane.hgrow="ALWAYS" prefWidth="25" styleClass="label-score" text="0" fx:id="lblCharge"
               GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="7">
          <tooltip>
            <Tooltip text="Melee+Charge bonus"/>
          </tooltip>
        </Label>
    <!-- 2nd row -->
        <Group GridPane.rowIndex="1" GridPane.columnIndex="0">
          <Region styleClass="icon-back" style="-fx-background-color: forestgreen"/>
          <Region styleClass="icon-front, icon-morale"/>
        </Group>
        <Label GridPane.hgrow="ALWAYS" prefWidth="25" styleClass="label-score" 
                text="0" fx:id="lblMorale"
               GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="1">
          <tooltip>
            <Tooltip text="Morale"/>
          </tooltip>
        </Label>
        <Group GridPane.rowIndex="1" GridPane.columnIndex="2">
          <Region styleClass="icon-back" style="-fx-background-color: darkolivegreen"/>
          <Region styleClass="icon-front, icon-boot"/>
        </Group>
        <Label GridPane.hgrow="ALWAYS" prefWidth="25" styleClass="label-score" 
                text="0" fx:id="lblMove"
               GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="3">
          <tooltip>
            <Tooltip text="Movement"/>
          </tooltip>
        </Label>
        <Group fx:id="grPaddles" GridPane.rowIndex="1" GridPane.columnIndex="4" >
          <Region fx:id="rPaddles" styleClass="icon-back" style="-fx-background-color: midnightblue"/>
          <Region styleClass="icon-front, icon-paddles"/>
        </Group>
        <Label GridPane.hgrow="ALWAYS" prefWidth="25" styleClass="label-score" 
                text="0" fx:id="lblPaddles"
               GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="5">
          <tooltip>
            <Tooltip text="Rowing"/>
          </tooltip>
        </Label>
        
    <!-- button row -->
        <ToggleButton styleClass="tb" fx:id="tgVis" text=""
                      GridPane.rowIndex="2" GridPane.columnIndex="0">
          <graphic>
            <Region styleClass="icon-front, icon-g, icon-eye"/>
          </graphic>
        </ToggleButton>
        
        <ToggleButton styleClass="tb" fx:id="tgWeather" text=""
                      GridPane.rowIndex="2" GridPane.columnIndex="1">
          <graphic>
            <Region styleClass="icon-front, icon-g, icon-snow"/>
          </graphic>
        </ToggleButton>
    
    
        <ToggleButton styleClass="tb" fx:id="tgMountain" text=""
                      GridPane.rowIndex="2" GridPane.columnIndex="2">
          <graphic>
            <Region styleClass="icon-front, icon-g, icon-dwarf"/>
          </graphic>
          
        </ToggleButton>
        
        <ToggleButton styleClass="tb" fx:id="tgFortification" text=""
                      GridPane.rowIndex="2" GridPane.columnIndex="3" >
          <graphic>
            <Region styleClass="icon-front, icon-g, icon-tower"/>
          </graphic>
        </ToggleButton>
        
        <ToggleButton styleClass="tb" fx:id="tgTerrain" text=""
                      GridPane.rowIndex="2" GridPane.columnIndex="4">
          <graphic>
            <Region styleClass="icon-front, icon-g, icon-mountain"/>
          </graphic>
          
        </ToggleButton>
        
        
        <ToggleButton styleClass="tb" fx:id="tgHero" text=""
                      GridPane.rowIndex="2" GridPane.columnIndex="5">
          <graphic>
            <Region styleClass="icon-front, icon-crown"/>
          </graphic>
        </ToggleButton>
        
        <Label  GridPane.hgrow="ALWAYS" styleClass="label-score" fx:id="lblEL" text="-"
               visible="false" GridPane.rowIndex="2" GridPane.columnIndex="6"/>        
        
        <Group  GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="6">
          <Region styleClass="icon-back" style="-fx-background-color: darkred"/>
          <Region styleClass="icon-front, icon-heart"/>
        </Group>
        
        <Label GridPane.rowIndex="1" GridPane.columnIndex="7" 
               styleClass="label-score" fx:id="lblHealth" text="--" prefWidth="20"/>
      </GridPane>
    </VBox>
  </center>
  <right>
    <!-- Vertical action bar -->
    <VBox spacing="5">
      <BorderPane.margin>
        <Insets top="5"/>
      </BorderPane.margin>
      <HBox spacing="2">
        <Button  styleClass="btn" fx:id="btnHeal" text="" onAction="#onHealUnit">
          <graphic>
            <Region styleClass="icon-front, icon-heart-plus"/>
          </graphic>
          <tooltip>
            <Tooltip text="Click to restore 1 hit to unit"/>
          </tooltip>
        </Button>
        <Button styleClass="btn" fx:id="btnDamage" text="" onAction="#onDamageUnit">
          <graphic>
            <Region styleClass="icon-front, icon-heart-minus" />
          </graphic>
          <tooltip>
            <Tooltip text="Click to remove 1 hit to unit."/>
          </tooltip>
        </Button>
      </HBox>
      <ToggleButton styleClass="tb"  fx:id="tbCamp" alignment="BASELINE_RIGHT"><tooltip>
          <Tooltip text="Send unit to camp."/>
        </tooltip>
        <graphic>
          <Region styleClass="icon-front, icon-pavillon"/>
        </graphic>
      </ToggleButton>
      <Button styleClass="btn" text=""  onAction="#onUnitRemove">
        <graphic>
          <Region styleClass="icon-front,icon-cancel" style="-fx-background-color:black" />
        </graphic>
        <tooltip>
          <Tooltip text="Click to remove unit."/>
        </tooltip>
      </Button>
      <Button fx:id="btnShowCargo" styleClass="btn" text="" onAction="#onCargoRequest" visible="false">
        <graphic>
          <Region styleClass="icon-front, icon-galea"/>
        </graphic>
        <tooltip>
          <Tooltip text="Click to add unit to the ship."/>
        </tooltip>
      </Button>
    </VBox>    
  </right>
</BorderPane>
