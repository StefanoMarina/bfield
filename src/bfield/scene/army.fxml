<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1"   fx:controller="bfield.scene.ArmyController">
    <top>
        <VBox>
            <Button maxWidth="Infinity" styleClass="armyName" alignment="CENTER" fx:id="lblName" onAction="#setName"/>
            <ToolBar>
                <ComboBox fx:id="cbUnits"/>
                <Button fx:id="btnAdd" text="Add unit" onAction="#onAddNewUnit"/>
                <ColorPicker fx:id="btnColorChange" styleClass="btnColor"/>
            </ToolBar>
            <HBox spacing="5" fillHeight="true" alignment="CENTER">
              <padding>
                <Insets top="2.5" bottom="2.5" left="2.5" right="2.5"/>
              </padding>
              <Group GridPane.columnIndex="0">
                  <Region styleClass="icon-back" style="-fx-background-color: midnightblue"/>
                  <Region styleClass="icon-front, icon-shield"/>
                </Group>
                 <Label styleClass="label-score, army-tool-label" text="0" fx:id="lblDef" GridPane.columnIndex="1">
              <tooltip>
                <Tooltip text="Defense score"/>
              </tooltip>
            </Label>
            <Spinner editable="true" styleClass="army-tool-spinner" fx:id ="sDefMod" GridPane.columnIndex="2">
               <tooltip>
                   <Tooltip text="Modifier to defense"/>
               </tooltip>
           </Spinner>
             
            <Group>
              <Region styleClass="icon-back" style="-fx-background-color: darkred"/>
              <Region styleClass="icon-front, icon-hilt"/>
            </Group>
            <Label styleClass="label-score, army-tool-label" text="0" fx:id="lblMelee" GridPane.columnIndex="4">
              <tooltip>
                <Tooltip text="Attack score"/>
              </tooltip>
            </Label>
            <Group GridPane.rowIndex="0" GridPane.columnIndex="5">
              <Region styleClass="icon-back" style="-fx-background-color:darkred"/>
              <Region styleClass="icon-front, icon-special"/>
            </Group>
            <Label styleClass="label-score, army-tool-label" text="0" fx:id="lblCharge"
                   GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="6">
              <tooltip>
                <Tooltip text="Special Attack score"/>
              </tooltip>
            </Label>
            <Spinner styleClass="army-tool-spinner" editable="true"  fx:id ="sAttMod" GridPane.columnIndex="7">
                <tooltip>
                    <Tooltip text="Modifier to both standard and special attack"/>
                </tooltip>
            </Spinner>
             <ToggleButton fx:id="tbFortified" text="" onAction="#onFortified">
                    <graphic>
                        <Region styleClass="icon-front, icon-g, icon-tower" style="-fx-background-color: black"/>
                    </graphic>
                    <tooltip>
                      <Tooltip text="Enable fortification (enemies suffer -1 to attacks)"/>
                    </tooltip>
                </ToggleButton>
                <Button fx:id="btnWeather" text="" onAction="#onHostileWeather">
                    <graphic>
                        <Region styleClass="icon-front, icon-g, icon-snow" style="-fx-background-color: blue"/>
                    </graphic>
                    <tooltip>
                      <Tooltip text="Make whole army suffer from abnormal weather (-2)"/>
                    </tooltip>
                </Button>
                <ToggleButton fx:id="tbHighGround" text="" onAction="#onHighGround">
                    <graphic>
                        <Region styleClass="icon-front, icon-g, icon-conquest" style="-fx-background-color: black"/>
                    </graphic>
                    <tooltip>
                      <Tooltip text="Army (hill) or 1st unit (mountain) has high ground"/>
                    </tooltip>
                </ToggleButton>
            </HBox>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <content>
                <VBox fx:id="boxList" spacing="20">
                    <padding>
                    <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <GridPane hgap="10" prefWidth="140">
            
        </GridPane>
    </bottom>
</BorderPane>
