<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="AnchorPane" prefHeight="400.0" prefWidth="600.0" 
            xmlns:fx="http://javafx.com/fxml/1" 
 fx:controller="bfield.scene.dialogs.NewBattleDialogController">
   <GridPane alignment="center" hgap="10" vgap="10" prefWidth="200">
     <columnConstraints>
       <ColumnConstraints fillWidth="true" halignment="RIGHT" percentWidth="40"/> 
       <ColumnConstraints fillWidth="true" halignment="LEFT" percentWidth="60"/>
     </columnConstraints>
     
     <Label GridPane.columnIndex="0" text="Battle name:"/> 
     <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Home team:"/> 
     <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Away team:"/> 
     <Label GridPane.columnIndex="0" GridPane.rowIndex="3" text="Ruleset:"/> 
     <TextField fx:id="tBattleName" text="Skirmish" GridPane.columnIndex="1"/>
     <TextField fx:id="tHome" text="Home" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
     <TextField fx:id="tAway" text="Away" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
     <ComboBox fx:id="cbRules" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
     <TextArea fx:id="taRules" wrapText="true" editable="false" 
               GridPane.rowIndex="4" GridPane.columnIndex="0" 
               GridPane.columnSpan="2" GridPane.fillWidth="true"/> 
   </GridPane>

</VBox>
